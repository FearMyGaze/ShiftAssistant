<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/OWSLAWorkerPrevious"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/previous"
                                android:tint="@color/White"
                                android:background="?attr/selectableItemBackgroundBorderless">
                            </ImageButton>

                            <ImageButton
                                android:id="@+id/OWSLAWorkerNext"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/next"
                                android:tint="@color/White"
                                android:background="?attr/selectableItemBackgroundBorderless">
                            </ImageButton>

                            <EditText
                                android:id="@+id/OWSLAWorkerSearchBox"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:hint="@string/OWSLAWorkerHindAFM"
                                android:textColorHint="@color/Gray"
                                android:background="@color/BlackTransparent">

                            </EditText>

                            <ImageButton
                                android:id="@+id/OWSLAWorkerRemove"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/remove"
                                android:tint="@color/Red"
                                android:background="?attr/selectableItemBackgroundBorderless">
                            </ImageButton>

                            <ImageButton
                                android:id="@+id/OWSLAWorkerAdd"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/add"
                                android:tint="@color/Green"
                                android:background="?attr/selectableItemBackgroundBorderless">
                            </ImageButton>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/OWSLAWorkerSearchButton"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:text="@string/OWSLASearch"
                                android:textSize="20sp">
                            </Button>

                        </LinearLayout>

                    </LinearLayout>//TaskBar

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterName"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerName"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Name

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterSurname"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerSurname"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Surname

                        </LinearLayout>//First Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterAFM"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerAFM"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//AFM

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterEmail"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerEmail"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Email

                        </LinearLayout>//Second Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterPassword"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerPassword"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>
                            </LinearLayout>//Password

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterGender"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerGender"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Gender

                        </LinearLayout>//Third Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/OWSLAWorkerLandLineTranslate"
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterLandLine"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerLandLine"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//LandLine

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterCellPhone"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerCellPhone"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//CellPhone

                        </LinearLayout>//Fourth Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterStreetAddress"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerStreetAddress"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//StreetAddress

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterNumber"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerNumber"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Number

                        </LinearLayout>//Fifth Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterPostalCode"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerPostalCode"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//PostalCode

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterTeamCode"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerTeamCode"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Department Code

                        </LinearLayout>//Sixth Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterBirthDate"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerBirthDate"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="date"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:hint="@string/DATE"
                                    android:textColorHint="@color/Gray"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//BirthDate

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterNationality"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerNationality"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//Nationality

                        </LinearLayout>//Seventh Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterWorkHours"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerWorkHours"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="none"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//WorkHours

                            <LinearLayout
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="125sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15sp"
                                    android:textColor="@color/White"
                                    android:text="@string/RegisterShiftType"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal">

                                </TextView>

                                <EditText
                                    android:id="@+id/OWSLAWorkerShiftType"
                                    android:layout_width="160sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:inputType="none"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:maxLines="1"
                                    android:imeOptions="actionDone"
                                    android:textAlignment="center"
                                    android:textColor="@color/White"
                                    android:textSize="25sp"
                                    android:background="@color/BlackTransparent">

                                </EditText>

                            </LinearLayout>//ShiftType

                        </LinearLayout>//Eighth Row

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/OWSLAWorkerConfirmButton"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                android:text="@string/RegisterConfirm"
                                android:textAlignment="center"
                                android:gravity="center_horizontal">

                            </Button>

                        </LinearLayout>//ConfirmButton

                    </LinearLayout>//Worker Form

                </LinearLayout>//You can touch this
            </ScrollView>//Scroll
        </LinearLayout>
    </LinearLayout>//Main Linear
</LinearLayout>