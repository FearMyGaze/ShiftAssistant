<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/OWSLAAssistantPrevious"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/previous"
                            android:tint="@color/White"
                            android:background="?attr/selectableItemBackgroundBorderless">
                        </ImageButton>

                        <ImageButton
                            android:id="@+id/OWSLAAssistantNext"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/next"
                            android:tint="@color/White"
                            android:background="?attr/selectableItemBackgroundBorderless">
                        </ImageButton>

                        <EditText
                            android:id="@+id/OWSLAAssistantSearchBox"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:hint="@string/OWSLAHindID"
                            android:textColorHint="@color/Gray"
                            android:background="@color/BlackTransparent">

                        </EditText>

                        <ImageButton
                            android:id="@+id/OWSLAAssistantRemove"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/remove"
                            android:tint="@color/Red"
                            android:background="?attr/selectableItemBackgroundBorderless">
                        </ImageButton>

                        <ImageButton
                            android:id="@+id/OWSLAAssistantAdd"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/add"
                            android:tint="@color/Green"
                            android:background="?attr/selectableItemBackgroundBorderless">
                        </ImageButton>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/OWSLAAssistantSearchButton"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:text="@string/OWSLASearch"
                            android:textSize="20sp">
                        </Button>

                    </LinearLayout>

                </LinearLayout>//TaskBar

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterName"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantName"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Name

                    </LinearLayout>//First Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterSurname"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantSurname"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Surname

                    </LinearLayout>//Second Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterAFM"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantAFM"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//AFM

                    </LinearLayout>//Third Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterEmail"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantEmail"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Email

                    </LinearLayout>//Fourth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterPassword"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantPassword"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>
                        </LinearLayout>//Password

                    </LinearLayout>//Fifth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterGender"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantGender"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Gender

                    </LinearLayout>//Sixth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterLandLine"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantLandLine"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//LandLine

                    </LinearLayout>//Seventh Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterCellPhone"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantCellPhone"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//CellPhone

                    </LinearLayout>//Ninth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterStreetAddress"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantStreetAddress"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//StreetAddress

                    </LinearLayout>//Tenth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterNumber"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantNumber"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Number

                    </LinearLayout>//Eleventh Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterPostalCode"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantPostalCode"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//PostalCode

                    </LinearLayout>//Twelfth Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterNationality"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantNationality"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="text"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//Nationality

                    </LinearLayout>//Thirteen Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterBirthDate"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/OWSLAAssistantBirthDate"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="date"
                                android:maxLines="1"
                                android:imeOptions="actionDone"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:hint="@string/DATE"
                                android:textColorHint="@color/Gray"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>//BirthDate

                    </LinearLayout>//Fourteen Row

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/OWSLAAssistantConfirmButton"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:text="@string/RegisterConfirm"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:visibility="invisible">

                        </Button>

                    </LinearLayout>//ConfirmButton

                </LinearLayout>//Assistant Form

            </LinearLayout>//You can touch
        </ScrollView>//Scroll
    </LinearLayout>//Main Linear
</LinearLayout>