<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/WelcomeString"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3sp"
                            android:gravity="center_horizontal"
                            android:text="@string/Name"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="30sp">

                        </TextView>//Title

                    </LinearLayout>//Name

                </LinearLayout>//WelcomeString

                <TextView
                    android:id="@+id/WelcomeParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/WelcomeParagraph"
                    android:textSize="20sp"
                    android:textColor="@color/White">

                </TextView>//WelcomeParagraph

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/LoginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:text="@string/Log">

                    </Button>//Login

                    <Button
                        android:id="@+id/RegisterButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:text="@string/Reg">

                    </Button>//Register

                </LinearLayout>//RegisterButton n LoginButton

            <LinearLayout
                android:id="@+id/LoginForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:text="@string/user"
                        android:textColor="@color/White">

                    </TextView>

                    <Switch
                        android:id="@+id/UserType"
                        android:layout_width="50sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center">

                    </Switch>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="@string/Owner"
                        android:textColor="@color/White">

                    </TextView>

                </LinearLayout>//UserType

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/LoginNameTranslate"
                        android:layout_width="160sp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/LoginName"
                        android:textColor="@color/White"
                        android:textAlignment="center"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/LoginName"
                        android:layout_width="160sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="25sp"
                        android:background="@color/BlackTransparent">

                    </EditText>//LoginName

                </LinearLayout>//LoginTranslate n LoginName

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/LoginPasswordTranslate"
                        android:layout_width="160sp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/LoginPassword"
                        android:textColor="@color/White"
                        android:textAlignment="center"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/LoginPassword"
                        android:layout_width="160sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:imeOptions="actionGo"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="25sp"
                        android:background="@color/BlackTransparent">

                    </EditText>

                </LinearLayout>PasswordTranslate n LoginPassword

                <TextView
                    android:id="@+id/LoginForgotText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:text="@string/ForgotText"
                    android:textColor="@color/Blue"
                    android:textSize="25sp">

                </TextView>

                <Button
                    android:id="@+id/LoginConfirmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_gravity="center"
                    android:text="@string/Confirm">

                </Button>//Confirm Login
            </LinearLayout>//Login Form

            <LinearLayout
                android:id="@+id/RegisterForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:text="@string/user"
                        android:textColor="@color/White">

                    </TextView>

                    <Switch
                        android:id="@+id/RegisterUserType"
                        android:layout_width="50sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center">

                    </Switch>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="@string/Owner"
                        android:textColor="@color/White">

                    </TextView>

                </LinearLayout>//RegisterUserTyp

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterNameTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterName"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterName"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>


                    </LinearLayout>//Name

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterSurnameTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterSurname"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterSurname"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Surname

                </LinearLayout>//First Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterAFMTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterAFM"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterAFM"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//AFM

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterEmailTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterEmail"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterEmail"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Email
                </LinearLayout>//Second Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterPasswordTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterPassword"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterPassword"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>
                    </LinearLayout>//Password

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterConfirmPasswordTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterConfirmPassword"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterConfirmPassword"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//RepeatPassword

                </LinearLayout>//Third Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterGenderTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterGender"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterGender"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Gender

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterLandLineTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterLandLine"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterLandLine"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//LandLine

                </LinearLayout>//Fourth Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterCellPhoneTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterCellPhone"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterCellPhone"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//CellPhone

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterStreetAddressTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterStreetAddress"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterStreetAddress"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>
                    </LinearLayout>//StreetAddress

                </LinearLayout>//Fifth Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterNumberTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterNumber"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterNumber"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Number

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterPostalCodeTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterPostalCode"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterPostalCode"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//PostalCode

                </LinearLayout>//Sixth Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterNationalityTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterNationality"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterNationality"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Ethnicity

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/RegisterBirthDateTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterBirthDate"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterBirthDate"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="date"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:hint="@string/DATE"
                            android:textColorHint="@color/Gray"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//BirthDate

                </LinearLayout>//Seventh Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/RegisterTeamCodeForm"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/RegisterTeamCodeTranslate"
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterTeamCode"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterTeamCode"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//Department Code

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/RegisterWorkHoursForm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/RegisterWorkHoursTranslate"
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterWorkHours"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:id="@+id/RegisterWorkHours"
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="number"
                                android:focusable="false"
                                android:clickable="false"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>

                    </LinearLayout>//WorkHours

                </LinearLayout>//Eighth Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/RegisterShiftTypeForm"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="125sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15sp"
                            android:textColor="@color/White"
                            android:text="@string/RegisterShiftType"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:gravity="center_horizontal">

                        </TextView>

                        <EditText
                            android:id="@+id/RegisterShiftType"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>

                    </LinearLayout>//ShiftType

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="invisible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15sp"
                                android:textColor="@color/White"
                                android:text="@string/RegisterWorkHours"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:gravity="center_horizontal">

                            </TextView>

                            <EditText
                                android:layout_width="160sp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="number"
                                android:focusable="false"
                                android:clickable="false"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                android:textColor="@color/White"
                                android:textSize="25sp"
                                android:background="@color/BlackTransparent">

                            </EditText>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>//Ninth Row

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/RegisterConfirmButton"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:text="@string/RegisterConfirm"
                        android:textAlignment="center"
                        android:gravity="center_horizontal">

                    </Button>

                </LinearLayout>//ConfirmButton
            </LinearLayout>//Register Form

            <LinearLayout
                    android:id="@+id/ForgetForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ForgetParagraph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/WelcomeParagraph"
                        android:textSize="15sp"
                        android:textColor="@color/White">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ForgetNameTranslate"
                            android:layout_width="160sp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/LoginName"
                            android:textColor="@color/White"
                            android:textAlignment="center"
                            android:textSize="20sp">

                        </TextView>

                        <EditText
                            android:id="@+id/ForgetName"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionGo"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/White"
                            android:textSize="25sp"
                            android:background="@color/BlackTransparent">

                        </EditText>//ForgetName

                    </LinearLayout>//ForgetLoginName

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ForgetSend"
                            android:layout_width="wrap_content"
                            android:layout_height="50sp"
                            android:text="@string/ForgetSend">

                        </Button>//ForgetSend

                    </LinearLayout>//ForgetSendButton

                </LinearLayout>//Forget Form

            </LinearLayout>//Inside Scroll
        </ScrollView>//Scroll
    </LinearLayout>//Main Linear
</LinearLayout>