<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/OWSLATeamPrevious"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/previous"
                    android:tint="@color/White"
                    android:background="?attr/selectableItemBackgroundBorderless">
                </ImageButton>

                <ImageButton
                    android:id="@+id/OWSLATeamNext"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/next"
                    android:tint="@color/White"
                    android:background="?attr/selectableItemBackgroundBorderless">
                </ImageButton>

                <EditText
                    android:id="@+id/OWSLATeamSearchBox"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp"
                    android:hint="@string/OWSLAHindID"
                    android:textColorHint="@color/Gray"
                    android:background="@color/BlackTransparent">

                </EditText>

                <ImageButton
                    android:id="@+id/OWSLATeamRemove"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/remove"
                    android:tint="@color/Red"
                    android:background="?attr/selectableItemBackgroundBorderless">
                </ImageButton>

                <ImageButton
                    android:id="@+id/OWSLATeamAdd"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/add"
                    android:tint="@color/Green"
                    android:background="?attr/selectableItemBackgroundBorderless">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/OWSLATeamSearchButton"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:text="@string/OWSLASearch"
                    android:textSize="20sp">
                </Button>

            </LinearLayout>

        </LinearLayout>//TaskBar

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="@string/OWSLATeamID"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal">
            </TextView>


            <EditText
                android:id="@+id/OWSLATeamID"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:hint="@string/ThreeDigitNumber"
                android:textColorHint="@color/Gray"
                android:background="@color/BlackTransparent">

            </EditText>

        </LinearLayout>//Row 1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="@string/OWSLATeamName"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal">
            </TextView>


            <EditText
                android:id="@+id/OWSLATeamName"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:hint="@string/ThreeDigitLetter"
                android:textColorHint="@color/Gray"
                android:background="@color/BlackTransparent">

            </EditText>

        </LinearLayout>//Row 2

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="@string/OWSLATeamCapacity"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal">
            </TextView>


            <EditText
                android:id="@+id/OWSLATeamCapacity"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:hint="@string/ThreeDigitNumber"
                android:textColorHint="@color/Gray"
                android:background="@color/BlackTransparent">

            </EditText>

        </LinearLayout>//Row 3

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="@string/OWSLATeamStartShift"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal">
            </TextView>


            <EditText
                android:id="@+id/OWSLATeamShiftStart"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="time"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:hint="@string/TwentyFourHour"
                android:textColorHint="@color/Gray"
                android:background="@color/BlackTransparent">

            </EditText>

        </LinearLayout>//Row 4

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="@string/OWSLATeamEndShift"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center_horizontal">
            </TextView>


            <EditText
                android:id="@+id/OWSLATeamShiftEnd"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="time"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:hint="@string/TwentyFourHour"
                android:textColorHint="@color/Gray"
                android:background="@color/BlackTransparent">

            </EditText>

        </LinearLayout>//Row 5

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/OWSLATeamConfirm"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:text="@string/RegisterConfirm"
                android:textSize="20sp"
                android:visibility="invisible">

            </Button>

        </LinearLayout>//Row 6

    </LinearLayout>//Main Linear
</LinearLayout>